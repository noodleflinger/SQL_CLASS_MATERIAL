create database school;
use school;
create table student(
	student_id int,
    student_name varchar(40),
    student_department varchar(40),
    student_age int
);
create table teacher(
	teacher_id int,
    teacher_name varchar(40),
    teacher_department varchar(40),
    teacher_age int
);
create table subject(
	subject_id int,
    subject_name varchar(40),
    subject_modules int,
    subject_teacher varchar(40)
);
show tables from school;

alter table student add(
	student_mobile varchar(200),
    student_skills varchar(50)
);

select * from student;
alter table student drop column student_skills;
